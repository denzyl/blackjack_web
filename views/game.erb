<h4> Blackjack! </h4>

<p>Welcome <%= session[:player_name] %></p>

<% if @play_again %>
  <p>
    <strong>Play again?</strong>
    <a href='/game' class='btn btn-primary'>Yes</a>
    <a href='/game_over' class='btn'> No</a>
  </p>
<% end %>

<div class='well'>
  <h4>Dealer's cards:</h4>
  <% session[:dealer_cards].each_with_index do |card, i| %>
    <% if session[:turn] != 'dealer' && i == 0 %>
      <img src='/images/cards/cover.jpg'>
    <% else %>
      <%= card_image(card) %>
    <% end %>
  <% end %>

  <% if @show_hitstay %>
    <p>
      <h5>Dealer has <%= calculate_total(session[:dealer_cards])%> and will hit. </h5>
      <form action='/game/dealer/hit' method='post'>
        <input type='submit' class='btn btn-primary' value='Click to see dealer card >>'>
      </form>
    </p>
  <% end %>
</div>

<br>
<div class='well'>
  <h4>Player's cards:</h4>
  <% session[:player_cards].each do |card| %>
    <%= card_image(card) %>
  <% end %>
</div>

<p> What would you like to do? The value of your cards: <%= calculate_total(session[:player_cards]) %>

<% if @show_hitstay %>
  <form id='hit_form' action="/game/player/hit" method="post">
    <input type="submit" value="Hit" class="btn btn-success" />
  </form>
  <form id='stay_form' action='/game/player/stay' method='post'>
    <input type="submit" value="Stay" class="btn btn-warning" />
  </form>
<% end %>
</p>
